<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="woojooin.planitbatch.domain.mapper.ProductMapper">

    <select id="getProductById" parameterType="long" resultType="woojooin.planitbatch.domain.vo.Product">
        SELECT 
            product_id as productId,
            invest_type as investmentType
        FROM product 
        WHERE product_id = #{productId}
    </select>

    <select id="getProductsByIds" resultType="woojooin.planitbatch.domain.vo.Product">
        SELECT 
            product_id as productId,
            invest_type as investmentType
        FROM product 
        WHERE product_id IN
        <foreach collection="productIds" item="productId" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </select>
    <select id="findById" resultType="woojooin.planitbatch.domain.vo.Product">
        select * from product
    </select>

</mapper>